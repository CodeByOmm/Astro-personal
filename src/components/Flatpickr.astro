---
import 'flatpickr/dist/flatpickr.css';
---


<input type="text" class="input max-w-sm" placeholder="YYYY-MM-DD" id="flatpickr-date" />


<script>
  window.addEventListener('load', function () {
    // Basic
    flatpickr('#flatpickr-date', {
      monthSelectorType: 'static'
    })
  })
</script>

